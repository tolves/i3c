<div class="row">
  <div class="col col-4">
    Choose a delivery address
  </div>
  <div class="col" id="address_show">
    <%= render "address/show" %>
  </div>
</div>

<div class="row">
  <!--  TODO: Use Table to show products-->
  <div class="col col-4">Review items</div>
  <div class="col">
    <% current_user.cart.lists.each do |l| %>
      <div class="row">
        <div class="col col-4"><%= image_tag(l.product.image, class: "icons") %></div>
        <div class="col col-4"><%= l.product.title %></div>
        <div class="col">€<%= l.price %></div>
      </div>
    <% end %>
    <div class="row">
      <span>Order Total: €<%= current_user.cart.amount %></span>
    </div>
  </div>
</div>

