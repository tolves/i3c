<%= form_for product, url: { action: action } do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, autocomplete: "title", placeholder: :name, class: "p-1 border-1" %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :title, prompt: "Pick a Category" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :band %><br>
    <%= f.text_field :band, autocomplete: "band", placeholder: :name, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, autocomplete: "price", placeholder: :name, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, autocomplete: "description", placeholder: :name, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="field" id='meta_data'>
    <% f.object.meta_data.each do |index, value| %>
      <%= f.label "meta_data[" + index + "]" %><br>
      <%= f.text_field "meta_data[" + index + "]", value: value %>
      <%= index %>: <%= value %>
      <br>
    <% end %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :content %>
    <%= f.rich_text_area :content %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit data: { "disable-with": "Saving..." } %>
  </div>
<% end %>