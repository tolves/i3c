<div>
  <%= form_for(@product, url: products_path(@product), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, autocomplete: "title", placeholder: :name, class: "p-1 border-1" %>
    </div>
    <div class="field">
      <%= f.label :category_id %><br>
      <%= f.collection_select :category_id, Category.all, :id, :title, prompt: "Pick a Category" %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :band %><br>
      <%= f.text_field :band, autocomplete: "title", placeholder: :name, class: "p-1 border-1" %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :price %><br>
      <%= f.text_field :price, autocomplete: "title", placeholder: :name, class: "p-1 border-1" %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description, autocomplete: "title", placeholder: :name, class: "p-1 border-1" %>
    </div>
    <br/>
    <div class="field" id='meta_data'>
    </div>
    <br/>

    <div class="actions">
      <%= f.submit data: { "disable-with": "Saving..." } %>
    </div>
  <% end %>
  <br/>
  <%= button_to :back, :back, method: :get %>
</div>