<div class="row">
  <table class="table table-striped table-hover align-middle">
    <thead>
    <th scope="col"></th>
    <th scope="col" class="w-50">Title</th>
    <th scope="col">Price</th>
    <th scope="col">Qty</th>
    <th scope="col">Subtotal</th>
    <th scope="col">Operation</th>
    </thead>
    <tbody>
    <% @cart.lists.each do |l| %>
      <tr>
        <td scope="row"><%= image_tag(l.product.image, class: "icons") %></td>
        <td scope="row"><%= l.product.title %></td>
        <td><%= l.price %></td>
        <td class="row">
          <div id="list_minus" class="col pointer">
            <%= icon("file-minus") %>
          </div>
          <div class="col">
            <span value="<%= l.product.id %>"><%= l.quantity %></span>
          </div>
          <div id="list_plus" class="col pointer">
            <%= icon("file-plus") %>
          </div>
        </td>
        <td><%= l.price * l.quantity %></td>
        <td><%= link_to :remove, cart_path(l), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-8"></div>
  <div class="col-3">
    Order Total: â‚¬
    <span id="total"><%= @cart.amount %></span>
  </div>
  <div class="col">
    <%= link_to :checkout, new_account_order_path %>
  </div>
</div>

