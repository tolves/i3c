<div>
  <table>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Qty</th>
      <th>Price</th>
    </tr>
    <% @cart.lists.each do |l| %>
      <tr>
        <td><%= l.product.id %></td>
        <td><%= l.product.title %></td>
        <td><%= l.quantity %></td>
        <td><%= l.price %></td>
        <td><%= link_to :remove, cart_path(l), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="2">Order Total:</td>
      <td colspan="2"></td>
      <td>â‚¬<%= @cart.amount %></td>
    </tr>
  </table>
</div>

