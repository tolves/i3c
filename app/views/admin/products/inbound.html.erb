<%= form_for @inventory, url: { action: :inbound }, method: :post do |f| %>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, placeholder: :quantity, value: 0, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.number_field :cost, placeholder: :cost, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note, placeholder: :note, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit data: { "disable-with": "Saving..." } %>
  </div>
<% end %>