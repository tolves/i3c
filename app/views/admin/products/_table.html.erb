<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">title</th>
    <th scope="col">band</th>
    <th scope="col">price</th>
    <th scope="col">inventory</th>
    <th scope="col">in stock?</th>
    <th scope="col">updated_at</th>
  </tr>
  </thead>
  <tbody>
  <% products.each do |p| %>
    <tr>
      <th scope="row"><%= link_to p.title, admin_product_path(p) %></th>
      <td><%= p.band %></td>
      <td><%= p.price %></td>
      <td><%= p.inbound&.quantity %></td>
      <td><%= p.in_stock? %></td>
      <td><%= p.updated_at %></td>
      <td><%= link_to :inbound, inbound_admin_product_path(p), method: :get %></td>
      <td><%= link_to :edit, edit_admin_product_path(p), method: :get %></td>
      <td><%= link_to :delete, admin_product_path(p), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>