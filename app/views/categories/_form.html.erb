<%= form_for category, url: { action: action } do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, autocomplete: "title", placeholder: :name, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :meta_data %><br>
    <%= f.text_field :meta_data, placeholder: :divided_by_comma, class: "p-1 border-1" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit data: { "disable-with": "Saving..." } %>
  </div>
<% end %>