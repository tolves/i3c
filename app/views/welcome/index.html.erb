<div class="row">
  <div class="col col-3">
    <%= render "welcome/score" %>
  </div>
  <div class="col">
    <% @categories.each do |c| %>
      <div class="row">
        <div id='category' value=<%= c.id %> class="col-2"><span class="align-middle"><%= c.title %></span></div>
        <div id='icon' class="col-2"><%= image_tag("icons/cpu.svg") %></div>
        <div class="row col">
          <% if session[:cart][c.title].blank? %>
            <div id="selected_<%= c.id %>" class="col selected_product" value=<%= c.id %>>
              Click me to choose one
            </div>
            <div id="quantity_<%= c.id %>" class="col"></div>
          <% else %>
            <div id="selected_<%= c.id %>" class="col selected_product" value=<%= c.id %>>
              <%= session[:cart][c.title]['title'] %>
            </div>
            <div id="quantity_<%= c.id %>" class="col">
              <%= session[:cart][c.title]['quantity'] %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col" id="products"></div>
</div>

<div class="row fixed-top">
  <div class="col col-6"></div>
  <div class="col col-3">Total:</div>
  <div class="col col-3"><%= button_to :add_to_cart, carts_path, method: :get %></div>
</div>