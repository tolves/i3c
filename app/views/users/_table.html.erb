<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">Users:</th>
  </tr>
  </thead>
  <tbody>
  <% users.each do |c| %>
    <tr>
      <td scope="row"><%= link_to c.email, user_path(c) %></td>
      <td><%= link_to :edit, edit_user_path(c) %></td>
      <td><%= link_to :delete, user_path(c), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>